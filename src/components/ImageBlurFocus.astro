---

<section class="lg:columns-3 md:columns-2 columns-1 gap-5">
	{
		images &&
			images.map(item => (
				<div class="group overflow-hidden break-inside-avoid rounded-xl relative">
					<img
						src={item.img}
						alt={item.title}
						class="max-w-full rounded-xl mb-5"
						loading="lazy"
						decoding="async"
					/>
					<div class="group-hover:opacity-100 opacity-0 transition-all duration-300 absolute top-10 left-10">
						<span class="text-white text-2xl">{item.title}</span>
					</div>
				</div>
			))
	}
</section>
